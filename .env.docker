# ================================
# Docker Production Environment
# ================================
# Copy this file to .env when using docker-compose.prod.yml
# Update values for your production environment

# ================================
# PostgreSQL Configuration
# ================================
POSTGRES_USER=freetimechat
POSTGRES_PASSWORD=freetimechat_prod_password_CHANGE_ME
POSTGRES_DB=freetimechat_main
POSTGRES_PORT=5432

# ================================
# Redis Configuration
# ================================
REDIS_PASSWORD=freetimechat_redis_password_CHANGE_ME
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# ================================
# Application Ports
# ================================
API_PORT=3001
WEB_PORT=3000

# ================================
# JWT Configuration
# ================================
# Paths inside the container
JWT_PRIVATE_KEY_PATH=/app/apps/api/keys/private.pem
JWT_PUBLIC_KEY_PATH=/app/apps/api/keys/public.pem
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=freetimechat-api
JWT_AUDIENCE=freetimechat-web

# ================================
# Security
# ================================
# Generate a secure random string for SESSION_SECRET
# Example: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here_CHANGE_ME
BCRYPT_ROUNDS=12

# ================================
# Google OAuth
# ================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# ================================
# CORS Configuration
# ================================
# In production, set this to your frontend domain
CORS_ORIGIN=http://localhost:3000

# ================================
# Application URLs
# ================================
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# ================================
# App Configuration
# ================================
NEXT_PUBLIC_APP_NAME=FreeTimeChat
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# ================================
# Auth Cookie Configuration
# ================================
NEXT_PUBLIC_AUTH_COOKIE_NAME=ftc_access_token
NEXT_PUBLIC_REFRESH_COOKIE_NAME=ftc_refresh_token
NEXT_PUBLIC_TOKEN_REFRESH_INTERVAL=840000

# ================================
# Feature Flags
# ================================
ENABLE_REGISTRATION=true
ENABLE_GOOGLE_AUTH=true
ENABLE_TWO_FACTOR=true
ENABLE_IMPERSONATION=true

# ================================
# Email Configuration (Optional)
# ================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_smtp_user
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM_EMAIL=noreply@freetimechat.com
# SMTP_FROM_NAME=FreeTimeChat

# ================================
# OpenAI Configuration (Optional)
# ================================
# OPENAI_API_KEY=your_openai_api_key_here

# ================================
# LLM Configuration (Optional)
# ================================
# LLM_CONFIG_ENCRYPTION_KEY=your_encryption_key_here

# ================================
# Monitoring (Optional)
# ================================
# SENTRY_DSN=your_sentry_dsn_here
# LOG_LEVEL=info

# ================================
# Rate Limiting
# ================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
