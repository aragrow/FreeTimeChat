# AfricAI Digital Books Web Application Environment Configuration
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local file to version control

# =============================================================================
# Application
# =============================================================================

NEXT_PUBLIC_APP_NAME=AfricAI Digital Books
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=0.1.0

# =============================================================================
# API Configuration
# =============================================================================

# API base URL (backend) - must include /api/v1 prefix
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# Authentication
# =============================================================================

# Cookie names for storing tokens
NEXT_PUBLIC_AUTH_COOKIE_NAME=freetimechat_token
NEXT_PUBLIC_REFRESH_TOKEN_COOKIE_NAME=freetimechat_refresh_token

# Token refresh interval (in milliseconds, 105 minutes = 6300000ms, before 2-hour token expiry)
NEXT_PUBLIC_TOKEN_REFRESH_INTERVAL=6300000

# =============================================================================
# Google OAuth
# =============================================================================

# Google OAuth Client ID (must match backend configuration)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features in the UI
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=true
NEXT_PUBLIC_ENABLE_TWO_FACTOR=true
NEXT_PUBLIC_ENABLE_IMPERSONATION=true

# =============================================================================
# UI Configuration
# =============================================================================

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=en-US

# Date/time format
NEXT_PUBLIC_DATE_FORMAT=MM/DD/YYYY
NEXT_PUBLIC_TIME_FORMAT=12h

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# =============================================================================
# Analytics (Future)
# =============================================================================

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
# NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=1.0

# =============================================================================
# Development
# =============================================================================

# Enable mock API (for development without backend)
NEXT_PUBLIC_ENABLE_MOCK_API=false

# Log level: error, warn, info, debug
NEXT_PUBLIC_LOG_LEVEL=info

# Show debug info in UI
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
