# FreeTimeChat Web Application Environment Variables

# Application
NEXT_PUBLIC_APP_NAME=FreeTimeChat
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=freetimechat_token
NEXT_PUBLIC_REFRESH_TOKEN_COOKIE_NAME=freetimechat_refresh_token

# Google OAuth (optional)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com

# Feature Flags
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=true
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_IMPERSONATION=true

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Development
NEXT_PUBLIC_ENABLE_MOCK_API=false
NEXT_PUBLIC_LOG_LEVEL=info
